# ============================================================================
# PROJECT HYDRA-CONSENSUS CONFIGURATION
# ============================================================================

# Model Server URLs (automatically set in Docker, override for custom setups)
ARCHITECT_URL=http://localhost:8081
WORKER_BACKEND_URL=http://localhost:8082
WORKER_FRONTEND_URL=http://localhost:8083
QA_URL=http://localhost:8084
JUDGE_URL=http://localhost:8085

# Supporting Services
CHROMADB_URL=http://localhost:8000
SEARXNG_URL=http://localhost:8889
REDIS_URL=redis://localhost:6379

# Searxng Configuration
SEARXNG_SECRET_KEY=generate_a_random_secret_key_here

# Model Paths (for non-Docker setups)
MODEL_DIR=./models
ARCHITECT_MODEL=DeepSeek-R1-Distill-Qwen-14B-Q4_K_M.gguf
WORKER_BACKEND_MODEL=Qwen2.5-Coder-7B-Instruct-Q4_K_M.gguf
WORKER_FRONTEND_MODEL=Qwen2.5-Coder-3B-Instruct-Q4_K_M.gguf
QA_MODEL=DeepSeek-R1-Distill-Qwen-1.5B-Q6_K.gguf
JUDGE_MODEL=Phi-4-Mini-Q4_K_M.gguf

# Memory Configuration
MEMORY_DIR=./memory
CHROMADB_PERSIST_DIR=./memory/chromadb
REDIS_PERSIST_DIR=./memory/redis

# Consensus Configuration
CONSENSUS_N_CANDIDATES=3
CONSENSUS_MIN_VOTES=2
CONSENSUS_TIMEOUT_SECONDS=300

# Execution Configuration
DOCKER_SANDBOX_ENABLED=true
DOCKER_SANDBOX_TIMEOUT=600
MAX_PARALLEL_TASKS=4

# Web Tools Configuration
JINA_READER_API_URL=https://r.jina.ai
FIRECRAWL_API_KEY=optional_if_using_firecrawl
ENABLE_WEB_SEARCH=true
ENABLE_WEB_SCRAPING=true

# Agent Zero Configuration
AGENT_ZERO_MAX_ITERATIONS=50
AGENT_ZERO_TEMPERATURE=0.7
AGENT_ZERO_TOP_P=0.9

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/hydra.log

# Performance Tuning
ENABLE_FLASH_ATTENTION=true
ENABLE_KV_CACHE_QUANTIZATION=true
KV_CACHE_PRECISION=q8_0
CONTEXT_SIZE_ARCHITECT=32768
CONTEXT_SIZE_WORKER=16384
CONTEXT_SIZE_QA=8192

# Development
DEBUG=false
TELEMETRY_ENABLED=false